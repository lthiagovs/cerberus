@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background-color: #121212; /* Dark background for the body */
        color: #f0f0f0; /* Light text color */
    }

    .download-card {
        width: 100%;
        margin: 0 auto; /* Center the card */
        padding: 0;
        border: 1px solid #007bff;
        border-radius: 8px;
        background-color: #2c2c2c; /* Darker card background */
        transition: transform 0.3s, box-shadow 0.3s;
        height: 100%;
        max-width: 400px; /* Maximum width for cards */
        opacity: 0.9; /* Slightly transparent */
    }

        .download-card:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(0, 123, 255, 0.5);
            opacity: 1; /* Full opacity on hover */
        }

    .card-img-top {
        width: 100%;
        height: auto;
        object-fit: cover;
        display: block;
    }

    .container {
        max-width: 1200px; /* Maximum width for the container */
    }

    .row {
        justify-content: center; /* Center the cards */
    }

    .btn-download {
        display: block; /* Center button */
        margin: 0 auto; /* Center align */
        background-color: #007bff; /* Button color */
        border: none;
        border-radius: 5px;
        padding: 10px 20px; /* Padding for button */
        color: white; /* Button text color */
        font-weight: bold; /* Bold text */
        transition: background-color 0.3s, transform 0.3s; /* Button hover effect */
    }

        .btn-download:hover {
            background-color: #0056b3; /* Darker shade on hover */
            transform: scale(1.1); /* Slightly larger on hover */
        }

    h2, h4 {
        text-align: center; /* Center headings */
    }
</style>

<div class="container mt-4">
    <h2 class="text-light">Downloads</h2>
    <h4 class="text-light mb-4">Select the version that suits your needs</h4>

    <div class="row">
        <div class="col-md-4 mb-4 d-flex justify-content-center">
            <div class="download-card text-light">
                <img src="~/img/light_cerberus.jpeg" class="card-img-top" alt="Light Cerberus">
                <div class="card-body">
                    <h5 class="card-title">Light Cerberus</h5>
                    <p class="card-text">A lightweight and fast version of Cerberus, ideal for efficiency.</p>
                    <p><strong>Required Plan:</strong> Basic</p>
                    <a href="#" class="btn-download">Download</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4 d-flex justify-content-center">
            <div class="download-card text-light">
                <img src="~/img/middle_cerberus.jpeg" class="card-img-top" alt="Invasive Cerberus">
                <div class="card-body">
                    <h5 class="card-title">Invasive Cerberus</h5>
                    <p class="card-text">An advanced version with invasion and monitoring features.</p>
                    <p><strong>Required Plan:</strong> Intermediate</p>
                    <a href="#" class="btn-download">Download</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4 d-flex justify-content-center">
            <div class="download-card text-light">
                <img src="~/img/heavy_cerberus.jpeg" class="card-img-top" alt="Trojan Cerberus">
                <div class="card-body">
                    <h5 class="card-title">Trojan Cerberus</h5>
                    <p class="card-text">The most complete and powerful version, with all Cerberus functionalities.</p>
                    <p><strong>Required Plan:</strong> Advanced</p>
                    <a href="#" class="btn-download">Download</a>
                </div>
            </div>
        </div>
    </div>
</div>
