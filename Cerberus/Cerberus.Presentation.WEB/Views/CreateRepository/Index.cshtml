@{
    ViewData["Title"] = "Home Page";
}

<style>
    h2 {
        margin-bottom: 30px;
    }

    .form-card {
        border: 1px solid #17a2b8; /* Light color */
        border-radius: 8px;
        background-color: #2c2c2c;
        padding: 20px;
        margin-bottom: 20px;
        transition: transform 0.3s;
    }

        .form-card:hover {
            transform: scale(1.02);
        }

    .btn-primary {
        background-color: #17a2b8; /* Light color */
        border-color: #17a2b8; /* Light color */
        transition: background-color 0.3s, transform 0.3s;
    }

        .btn-primary:hover {
            background-color: #0e6b8e; /* Darker light color */
            transform: scale(1.05);
        }

    .file-upload {
        position: relative;
        overflow: hidden;
        margin-bottom: 15px;
    }

        .file-upload input[type="file"] {
            position: absolute;
            top: 0;
            right: 0;
            opacity: 0;
            cursor: pointer;
        }

        .file-upload label {
            display: inline-block;
            padding: 10px 20px;
            background-color: #17a2b8; /* Light color */
            color: white;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .file-upload label:hover {
                background-color: #0e6b8e; /* Darker light color */
            }
</style>

<div class="container mt-4">
    <h2 class="text-light text-center">Create Script</h2> <!-- Changed to English -->

    <div class="form-card text-light">
        <form>
            <div class="form-group">
                <label for="scriptName">Script Name:</label> <!-- Changed to English -->
                <input type="text" class="form-control" id="scriptName" placeholder="Enter the script name" required> <!-- Changed to English -->
            </div>

            <div class="form-group">
                <label for="dllSelect">Consumed DLL:</label> <!-- Changed to English -->
                <select class="form-control" id="dllSelect" required>
                    <option value="">Select a DLL</option> <!-- Changed to English -->
                    <option value="dll1">DLL 1</option>
                    <option value="dll2">DLL 2</option>
                    <option value="dll3">DLL 3</option>
                </select>
            </div>

            <div class="form-group file-upload">
                <label for="imageUpload">Upload Image:</label> <!-- Changed to English -->
                <input type="file" class="form-control-file" id="imageUpload" accept="image/*" required>
                <label for="imageUpload">Select Image</label> <!-- Changed to English -->
            </div>

            <div class="form-group">
                <label for="scriptDescription">Description:</label>
                <textarea class="form-control" id="scriptDescription" rows="3" placeholder="Enter a description of the script" required></textarea> <!-- Changed to English -->
            </div>

            <div class="form-group file-upload">
                <label for="luaFile">Upload .lua File:</label> <!-- Changed to English -->
                <input type="file" class="form-control-file" id="luaFile" accept=".lua" required>
                <label for="luaFile">Select .lua File</label> <!-- Changed to English -->
            </div>

            <button type="submit" class="btn btn-primary btn-block">Create Script</button> <!-- Changed to English -->
        </form>
    </div>
</div>
