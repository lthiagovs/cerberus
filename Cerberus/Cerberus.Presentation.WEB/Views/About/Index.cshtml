@{
    ViewData["Title"] = "Home Page";
}

<style>
    .about-section {
        padding: 40px 0;
        color: #f0f0f0;
        animation: fadeIn 1s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    .team-card {
        background-color: #2c2c2c;
        border-radius: 8px; /* Removed border */
        padding: 20px;
        transition: transform 0.2s, background-color 0.2s;
        text-align: center; /* Center text in cards */
        height: 100%; /* Equalize card heights */
    }

    .team-card:hover {
        transform: scale(1.05);
        background-color: #3a3a3a;
    }

    .team-img {
        width: 120px; /* Fixed width for equal image sizes */
        height: 120px; /* Fixed height for equal image sizes */
        border-radius: 50%; /* Circular images */
        object-fit: cover; /* Maintain aspect ratio */
        transition: transform 0.3s, filter 0.3s; /* Transition for filter */
        margin-bottom: 15px; /* Spacing below image */
        filter: grayscale(100%); /* Black and white effect */
    }

    .team-img:hover {
        transform: scale(1.1);
        filter: grayscale(0%); /* Remove black and white on hover */
    }

    .contact-info {
        margin-top: 30px;
        border-top: 1px solid white;
        padding-top: 20px;
    }

    .btn-github {
        background-color: #24292e; /* GitHub button color */
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 15px; /* Padding for button */
        margin-top: 10px; /* Spacing above button */
        text-decoration: none; /* Remove underline */
        transition: background-color 0.3s;
    }

    .btn-github:hover {
        background-color: #1b1f23; /* Darker shade for hover effect */
    }
</style>

<div class="container about-section">
    <h2 class="text-light text-center">About Cerberus.NET</h2>
    <p class="text-light text-center">Cerberus.NET is an innovative solution that enables secure and effective management and monitoring of devices. With a user-friendly interface and advanced features, our platform is designed to cater to both novice and experienced users.</p>

    <h3 class="text-center mt-5 text-light">Our Mission</h3>
    <p class="text-light text-center">To provide powerful and reliable tools that help our users achieve their goals securely and efficiently.</p>

    <h3 class="text-center mt-5 text-light">Team</h3>
    <div class="row mt-4 justify-content-center">
        <div class="col-md-4">
            <div class="team-card text-light">
                <img src="~/img/creator1.jpeg" alt="Luis Thiago Vasconcelos" class="team-img">
                <h5>Luis Thiago Vasconcelos</h5>
                <p>.NET Fullstack Developer</p>
                <a href="https://github.com/lthiagovs" class="btn-github">GitHub</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="team-card text-light">
                <img src="~/img/creator2.jpg" alt="Emanuel Magalhães" class="team-img">
                <h5>Emanuel Magalhães</h5>
                <p>.NET Fullstack Developer</p>
                <a href="https://github.com/anarchyysm" class="btn-github">GitHub</a>
            </div>
        </div>
    </div>

    <div class="contact-info text-light text-center">
        <h3 class="mt-5 text-light">Contact</h3>
        <p>For more information, contact us via email: <a href="mailto:contact@cerberus.net" class="text-primary">contact@cerberus.net</a></p>
    </div>
</div>
