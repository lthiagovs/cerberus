@{
    ViewData["Title"] = "Home Page";
}

<style>
    .info-card {
        border: 1px solid #17a2b8; /* Light color */
        border-radius: 8px;
        background-color: #2c2c2c;
        margin-bottom: 20px;
        padding: 20px;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .info-card:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 20px rgba(23, 162, 184, 0.3); /* Light color */
        }

    .card-img-top {
        max-height: 200px;
        object-fit: cover;
        border-radius: 8px;
    }

    .filter-section {
        margin-bottom: 20px;
    }

    .input-group input {
        border-radius: 5px 0 0 5px;
    }

    .input-group button {
        border-radius: 0 5px 5px 0;
    }
</style>

<div class="container mt-4">
    <h2 class="text-light text-center">Created Scripts</h2> <!-- Changed to English -->
    <!-- Search and Filter Bar -->
    <div class="filter-section">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Search script..." aria-label="Search script"> <!-- Changed to English -->
            <div class="input-group-append">
                <button class="btn btn-light" type="button">Search</button> <!-- Changed to light -->
            </div>
        </div>
        <div class="form-group">
            <label for="filterDll" class="text-light">Filter by DLL:</label> <!-- Changed to English -->
            <select class="form-control" id="filterDll">
                <option value="">All</option> <!-- Changed to English -->
                <option value="dll1">DLL 1</option>
                <option value="dll2">DLL 2</option>
                <option value="dll3">DLL 3</option>
            </select>
        </div>
    </div>

    <div class="row">
        <!-- Script Card -->
        <div class="col-md-4">
            <div class="info-card text-light">
                <img src="imagem-script1.jpg" alt="Script 1" class="card-img-top">
                <h5 class="mt-2">Script Name 1</h5> <!-- Changed to English -->
                <p><strong>DLL:</strong> Consumed DLL 1</p> <!-- Changed to English -->
                <p><strong>Creator:</strong> Creator Name 1</p> <!-- Changed to English -->
                <button class="btn btn-success">Buy</button> <!-- Changed to English -->
            </div>
        </div>
        <div class="col-md-4">
            <div class="info-card text-light">
                <img src="imagem-script2.jpg" alt="Script 2" class="card-img-top">
                <h5 class="mt-2">Script Name 2</h5> <!-- Changed to English -->
                <p><strong>DLL:</strong> Consumed DLL 2</p> <!-- Changed to English -->
                <p><strong>Creator:</strong> Creator Name 2</p> <!-- Changed to English -->
                <button class="btn btn-success">Buy</button> <!-- Changed to English -->
            </div>
        </div>
        <div class="col-md-4">
            <div class="info-card text-light">
                <img src="imagem-script3.jpg" alt="Script 3" class="card-img-top">
                <h5 class="mt-2">Script Name 3</h5> <!-- Changed to English -->
                <p><strong>DLL:</strong> Consumed DLL 3</p> <!-- Changed to English -->
                <p><strong>Creator:</strong> Creator Name 3</p> <!-- Changed to English -->
                <button class="btn btn-success">Buy</button> <!-- Changed to English -->
            </div>
        </div>
        <!-- Add more cards as needed -->
    </div>
</div>
