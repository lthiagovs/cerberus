@{
    ViewData["Title"] = "Home Page";
}

<style>
    @@keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
    .info-card {
        border: 1px solid #17a2b8; /* Light color */
        border-radius: 8px;
        background-color: #2c2c2c;
        padding: 20px;
        margin-bottom: 20px;
        transition: transform 0.3s;
    }
    .info-card:hover {
        transform: scale(1.02);
        box-shadow: 0 0 15px rgba(23, 162, 184, 0.5); /* Light color */
    }
    .btn-custom {
        margin-right: 10px;
        transition: background-color 0.3s;
    }
    .btn-custom:hover {
        background-color: #0056b3;
    }
    .table-header {
        background-color: #17a2b8; /* Light color */
        color: #fff;
        transition: background-color 0.3s;
    }
    .table-header:hover {
        background-color: #0056b3;
    }
    .table-dark th, .table-dark td {
        border: 1px solid #444;
    }
</style>

<div class="container mt-4">
    <!-- Script Card -->
    <div class="info-card text-light">
        <h2 class="text-light">Script</h2>
        <p><strong>Name:</strong> Script Name</p>
        <p><strong>Creator:</strong> User Name</p>
        <p><strong>Consumes:</strong> DLL it consumes</p>
        <div class="text-center">
            <button class="btn btn-warning btn-custom">Edit</button>
            <button class="btn btn-danger btn-custom">Delete</button>
            <button class="btn btn-success btn-custom">Activate</button>
        </div>
    </div>

    <!-- Data Card -->
    <div class="info-card text-light">
        <h2 class="text-light">Data</h2>
        <table class="table table-dark mt-4">
            <thead class="table-header">
                <tr>
                    <th>ID</th>
                    <th>Submission Date</th>
                    <th>Type</th>
                    <th>View</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>09/01/2023</td>
                    <td>Type A</td>
                    <td><button class="btn btn-info">View</button></td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>09/02/2023</td>
                    <td>Type B</td>
                    <td><button class="btn btn-info">View</button></td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>09/03/2023</td>
                    <td>Type C</td>
                    <td><button class="btn btn-info">View</button></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
