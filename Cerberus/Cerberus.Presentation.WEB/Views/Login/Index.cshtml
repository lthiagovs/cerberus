@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* styles.css */

/* Reset básico para margin e padding */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: Arial, sans-serif;
    color: #00ff00; /* Verde brilhante */
    background-color: #000; /* Preto */
}

/* Navbar e footer (já fornecidos anteriormente) */
header {
    background-color: #111; /* Um tom mais escuro de preto */
}

.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    border-bottom: 2px solid #00ff00; /* Linha verde brilhante */
}

.navbar .logo {
    font-size: 1.5rem;
    color: #00ff00; /* Verde brilhante */
    text-decoration: none;
    text-shadow: 0 0 5px #00ff00, 0 0 10px #00ff00, 0 0 15px #00ff00;
    animation: pulse 1.5s infinite;
}

.nav-links {
    list-style: none;
    display: flex;
}

.nav-links li {
    margin-left: 1rem;
}

.nav-links a {
    color: #00ff00; /* Verde brilhante */
    text-decoration: none;
    font-size: 1rem;
    text-shadow: 0 0 5px #00ff00, 0 0 10px #00ff00, 0 0 15px #00ff00;
    animation: pulse 1.5s infinite;
}

.nav-links a:hover {
    text-decoration: underline;
}

footer {
    background-color: #111; /* Um tom mais escuro de preto */
    padding: 1rem;
    text-align: center;
    border-top: 2px solid #00ff00; /* Linha verde brilhante */
    position: fixed;
    bottom: 0;
    width: 100%;
    left: 0;
    text-shadow: 0 0 5px #00ff00, 0 0 10px #00ff00, 0 0 15px #00ff00;
    animation: pulse 1.5s infinite;
}

/* Estilos para a página de login */
main {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: calc(100vh - 80px); /* Ajusta a altura para o footer fixo */
    background-color: #000; /* Preto */
}

.login-container {
    background-color: #222; /* Um tom escuro de cinza */
    padding: 2rem;
    border-radius: 8px;
    width: 100%;
    max-width: 400px;
    box-shadow: 0 0 10px rgba(0, 255, 0, 0.5); /* Sombra verde */
}

.login-container h1 {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 1rem;
    text-shadow: 0 0 5px #00ff00, 0 0 10px #00ff00, 0 0 15px #00ff00;
    animation: pulse 1.5s infinite;
}

form {
    display: flex;
    flex-direction: column;
}

label {
    margin-bottom: 0.5rem;
    font-size: 1rem;
}

input {
    padding: 0.5rem;
    margin-bottom: 1rem;
    border: 1px solid #00ff00; /* Verde brilhante */
    border-radius: 4px;
    background-color: #333; /* Um tom mais claro que o fundo */
    color: #00ff00; /* Verde brilhante */
}

button {
    padding: 0.75rem;
    border: none;
    border-radius: 4px;
    background-color: #00ff00; /* Verde brilhante */
    color: #000; /* Preto */
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.3s;
}

button:hover {
    background-color: #00cc00; /* Verde mais escuro para o efeito hover */
}

</style>

<div class="login-container">
    <h1>Login</h1>
    <form action="#" method="post">
        <label for="username">Nome de Usuário</label>
        <input type="text" id="username" name="username" required>

        <label for="password">Senha</label>
        <input type="password" id="password" name="password" required>

        <button type="submit"><a href="@Url.Action("Index", "Cerberus")">Entrar</a></button>
    </form>
</div>