@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background-color: #1e1e1e;
        color: #f0f0f0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .card {
        background-color: #2b2b2b;
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        padding: 20px;
        margin-bottom: 30px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 30px rgba(0, 0, 0, 0.5);
    }

    .profile-img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        border: 2px solid #f0f0f0;
    }

    .profile-card .info-text h3 {
        font-size: 1.8rem;
        margin: 0;
    }

    .info-container {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 20px;
    }

    .info-text p {
        margin: 5px 0;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 50px;
        font-weight: bold;
        transition: background-color 0.3s;
    }

    .btn-warning {
        background-color: #f39c12;
        border: none;
        color: white;
    }

    .btn-warning:hover {
        background-color: #e67e22;
    }

    .btn-danger {
        background-color: #e74c3c;
        border: none;
        color: white;
    }

    .btn-danger:hover {
        background-color: #c0392b;
    }

    .devices-card, .infected-card {
        background-color: #2b2b2b;
        border-radius: 10px;
        padding: 20px;
    }

    table {
        width: 100%;
        margin-top: 20px;
        color: #f0f0f0;
        border-collapse: separate;
        border-spacing: 0 10px;
    }

    th {
        text-align: left;
        font-weight: bold;
        padding-bottom: 10px;
        border-bottom: 1px solid #444;
    }

    td {
        padding: 10px;
    }

    .table-dark tbody tr {
        background-color: #333;
        transition: background-color 0.3s ease;
    }

    .table-dark tbody tr:hover {
        background-color: #444;
    }

    .map-container {
        height: 400px;
        border-radius: 10px;
        overflow: hidden;
        border: none;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }

    footer {
        background: linear-gradient(135deg, #000, #333);
        padding: 20px;
        text-align: center;
    }

    .social-links a {
        color: #f0f0f0;
        font-size: 1.2rem;
        margin: 0 10px;
        text-decoration: none;
        transition: color 0.3s;
    }

    .social-links a:hover {
        color: #e67e22;
    }

    .fade-in {
        opacity: 0;
        animation: fadeIn 1s forwards;
    }

    @@keyframes fadeIn {
        to {
            opacity: 1;
        }
    }
</style>

<div class="container mt-5">
    <!-- Profile Card -->
    <div class="card profile-card text-center fade-in">
        <h1>User</h1>
        <div class="info-container mb-4">
            <img src="usuario-foto.jpg" alt="User Photo" class="profile-img">
            <div class="info-text">
                <h3>John Silva</h3>
                <p><strong>Email:</strong> john.silva@email.com</p>
                <p><strong>Creation Date:</strong> 01/01/2022</p>
                <p><strong>Remaining Time:</strong> 30 days</p>
            </div>
        </div>
        <div class="text-center">
            <a href="#" class="btn btn-warning mx-1">Edit</a>
            <a href="#" class="btn btn-danger mx-1">Logout</a>
        </div>
    </div>

    <!-- Devices Card -->
    <div class="card devices-card text-light fade-in">
        <h2 class="text-center">My Devices</h2>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Name</th>
                    <th>IP</th>
                    <th>Status</th>
                    <th>Access</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>LINUX</td>
                    <td>Server 1</td>
                    <td>192.168.1.10</td>
                    <td>Active</td>
                    <td><button class="btn btn-success">Access</button></td>
                </tr>
                <tr>
                    <td>WINDOWS</td>
                    <td>PC John</td>
                    <td>192.168.1.20</td>
                    <td>Inactive</td>
                    <td><button class="btn btn-warning">Access</button></td>
                </tr>
                <tr>
                    <td>ANDROID</td>
                    <td>Mobile</td>
                    <td>192.168.1.30</td>
                    <td>Active</td>
                    <td><button class="btn btn-success">Access</button></td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Infected Card -->
    <div class="card infected-card text-light fade-in">
        <h2 class="text-center">Infected</h2>
        <div class="map-container">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3151.8354345098695!2d144.95373531531554!3d-37.816279979751!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad642af0b1f1f29%3A0xf6a0acb7c3e37e2c!2sFederation%20Square!5e0!3m2!1sen!2sus!4v1625879051220!5m2!1sen!2sus"
                    width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
    </div>
</div>
