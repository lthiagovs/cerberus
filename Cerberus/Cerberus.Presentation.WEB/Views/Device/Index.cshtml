@{
    ViewData["Title"] = "Device Page";
}

<style>
    .section {
        background-color: #2c2c2c;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
        opacity: 0;
        transform: translateY(20px);
        animation: fadeIn 0.5s forwards; /* Fade-in animation */
    }
    .table-header {
        background-color: #17a2b8; /* Light color */
        color: #fff;
    }
    @@keyframes fadeIn {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    #map {
        height: 300px; /* Map height */
        border-radius: 8px;
        margin-top: 20px;
    }
    .btn-custom {
        margin-right: 10px;
    }
</style>

<div class="container mt-4" style="color: white;">
    <h2 class="text-center text-light">Device</h2>

    <!-- Device Information -->
    <div class="section">
        <h4>Device Information</h4>
        <p><strong>Name:</strong> Example Device</p>
        <p><strong>ID:</strong> 12345</p>
        <p><strong>Status:</strong> Active</p>
        <p><strong>Type:</strong> Device Type</p>
        <p>Additional information about the device can be included here for better user understanding.</p>
    </div>

    <!-- Associated Scripts Table -->
    <div class="section">
        <h4>Associated Scripts</h4>
        <table class="table table-dark mt-4">
            <thead class="table-header">
                <tr>
                    <th>ID</th>
                    <th>Script Name</th>
                    <th>Status</th>
                    <th>Data</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Script A</td>
                    <td>Active</td>
                    <td><button class="btn btn-info">View Data</button></td>
                    <td><button class="btn btn-danger">Delete</button></td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Script B</td>
                    <td>Inactive</td>
                    <td><button class="btn btn-info">View Data</button></td>
                    <td><button class="btn btn-danger">Delete</button></td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>Script C</td>
                    <td>Active</td>
                    <td><button class="btn btn-info">View Data</button></td>
                    <td><button class="btn btn-danger">Delete</button></td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Device Location -->
    <div class="section">
        <h4>Location</h4>
        <p><strong>Address:</strong> Example Street, 123 - Neighborhood - City - State</p>
        <p><strong>Coordinates:</strong> -23.5505, -46.6333</p>
        <div id="map"></div>
    </div>
</div>
