@{
    ViewData["Title"] = "Página do Computador";
}

<style>
    body {
        background-color: #222;
        color: #00ff00; /* Verde brilhante */
        font-family: Arial, sans-serif;
    }

    .computer-info {
        background-color: #333;
        padding: 1.5rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
    }

    .scripts-table {
        background-color: #333;
        padding: 1.5rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 0.75rem;
        border: 1px solid #444;
        text-align: left;
    }

    th {
        background-color: #111;
        color: #00ff00; /* Verde brilhante */
    }

    td {
        color: #00ff00; /* Verde brilhante */
    }

    tr:nth-child(even) {
        background-color: #444;
    }

    tr:nth-child(odd) {
        background-color: #333;
    }

    .btn-access {
        background-color: #00ff00; /* Verde brilhante */
        color: #222;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-access:hover {
            background-color: #00cc00; /* Verde um pouco mais escuro */
        }

    #canvas {
        background-color: #000; /* Fundo preto */
        border-radius: 8px;
        height: 400px; /* Ajuste a altura conforme necessário */
        width: 100%; /* Largura total */
        margin-top: 1.5rem;
    }
</style>

<main>
    <div class="computer-info">
        <h1>Informações do Computador</h1>
        <p>Nome: Computador do Usuário</p>
        <p>IP: 192.168.1.100</p>
        <p>MAC: 00:1A:2B:3C:4D:5F</p>
        <p>Status: Online</p>
    </div>

    <div class="scripts-table">
        <h2>Scripts Disponíveis</h2>
        <table>
            <thead>
                <tr>
                    <th>Nome do Script</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Script 1</td>
                    <td><button class="btn-access">Acessar</button></td>
                </tr>
                <tr>
                    <td>Script 2</td>
                    <td><button class="btn-access">Acessar</button></td>
                </tr>
                <tr>
                    <td>Script 3</td>
                    <td><button class="btn-access">Acessar</button></td>
                </tr>
            </tbody>
        </table>
    </div>

    <div id="canvas"></div>
</main>
