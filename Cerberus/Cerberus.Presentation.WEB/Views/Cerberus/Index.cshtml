@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* styles.css */

    /* Perfil do usuário */
    .profile-section {
        background-color: #222;
        padding: 1.5rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
        color: #00ff00; /* Verde brilhante */
    }

    .profile-info {
        display: flex;
        align-items: center;
    }

    .profile-photo {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        margin-right: 1rem;
        border: 2px solid #00ff00; /* Verde brilhante */
    }

    .user-details h1 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }

    .user-details p {
        font-size: 1rem;
    }

    /* Tabela de computadores */
    .computers-table {
        background-color: #222;
        padding: 1.5rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
    }

        .computers-table h2 {
            margin-bottom: 1rem;
        }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 0.75rem;
        border: 1px solid #333;
        text-align: left;
    }

    th {
        background-color: #111;
        color: #00ff00; /* Verde brilhante */
    }

    td {
        color: #00ff00; /* Verde brilhante */
    }

    tr:nth-child(even) {
        background-color: #333;
    }

    tr:nth-child(odd) {
        background-color: #222;
    }

    /* Mapa do Google Maps */
    .map-section {
        background-color: #222;
        padding: 1.5rem;
        border-radius: 8px;
        color: #00ff00; /* Verde brilhante */
    }

    #map {
        height: 400px; /* Ajuste a altura conforme necessário */
        border: 2px solid #00ff00; /* Verde brilhante */
        border-radius: 8px;
    }

</style>

<main>
    <div class="profile-section">
        <div class="profile-info">
            <img src="user-photo.jpg" alt="Foto do Usuário" class="profile-photo" />
            <div class="user-details">
                <h1>Nome do Usuário</h1>
                <p>Email: usuario@example.com</p>
                <p>Telefone: (11) 1234-5678</p>
            </div>
        </div>
    </div>

    <div class="computers-table">
        <h2>Computadores Afetados</h2>
        <table>
            <thead>
                <tr>
                    <th>Tipo de Dispositivo</th>
                    <th>IP</th>
                    <th>MAC</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><a href="@Url.Action("Index", "Device")">🖥️ Windows</a></td>
                    <td>192.168.1.2</td>
                    <td>00:1A:2B:3C:4D:5E</td>
                    <td>Online</td>
                </tr>
                <tr>
                    <td><a href="@Url.Action("Index", "Device")">🖥️ Windows</a></td>
                    <td>192.168.1.3</td>
                    <td>00:1A:2B:3C:4D:6F</td>
                    <td>Offline</td>
                </tr>
                <tr>
                    <td><a href="@Url.Action("Index", "Device")">🖥️ Windows</a></td>
                    <td>192.168.1.4</td>
                    <td>00:1A:2B:3C:4D:7G</td>
                    <td>Online</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="map-section">
        <h2>Mapa dos Computadores Infectados</h2>
        <div id="map"></div>
    </div>
</main>

<script>
    function initMap() {
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 10,
            center: { lat: -15.7801, lng: -47.9292 } // Coordenadas exemplo
        });

        // Adicione marcadores aqui se necessário
    }
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap" async defer></script>

